<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="OneSync.DotNetFrameworkErrorWindow"
	x:Name="Window"
	Title="OneSync System Requirement"
	Width="649" Height="226" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

	<Grid x:Name="LayoutRoot">
		<Label Margin="22,22,90,0" Content="OneSync 3 can only run on computer which has .NET 3.5 SP1 installed." Foreground="#FF0000B9" VerticalAlignment="Top" Height="26.261"/>
		<Label Margin="22,52.261,90,0" Content="Please download and then install the latest version of .NET Framework here:" Foreground="#FF0000B9" VerticalAlignment="Top" Height="26.261"/>
		<Label x:Name="lblDownloadLink" Margin="0,52.261,81,0" Content="Download .NET X.Y" Foreground="#FF0000B9" VerticalAlignment="Top" Height="26.261" HorizontalAlignment="Right" Width="134" Cursor="Hand" FontWeight="Bold" MouseDown="lblDownloadLink_MouseDown"/>
	</Grid>
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FF69DAF4" Offset="1"/>
			<GradientStop Color="White" Offset="0.337"/>
			<GradientStop Color="#FFC9EFF8" Offset="0.768"/>
		</LinearGradientBrush>
	</Window.Background>
</Window>